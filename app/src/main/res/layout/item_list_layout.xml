<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_card_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_example"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/text_card_view_snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/snippet_example"/>

        <TextView
            android:id="@+id/text_card_view_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deadline_example"
            android:gravity="end"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>